{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "checkJs": false,
    "allowJs": true
  },
  "include": ["src/**/*", "vite.config.js", "tailwind.config.js", "server/server.js"],
  "exclude": ["node_modules", "dist", "dist-server"]
}
